local function move_pane(key, direction)
  return {
    key = key,
    mods = 'LEADER',
    action = act.ActivatePaneDirection(direction),
  }
end

local function resize_pane(key, direction)
  return {
    key = key,
    action = act.AdjustPaneSize { direction, 3 }
  }
end

