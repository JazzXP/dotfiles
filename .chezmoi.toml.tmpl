{{ $email := promptString "email" -}}
{{ $name := promptString "name" -}}
{{ $location := promptString "location (work/home)" -}}
{{ $opsecret := promptString "1Password secret key" -}}
[git]
  autoCommit = true
  autoPush = true
[edit]
  command = "nvim"
[data]
    email = {{ $email | quote }}
    name = {{ $name | quote }}
    location = {{ $location | quote }}
    opsecret = {{ $opsecret | quote }}
